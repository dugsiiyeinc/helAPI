generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Ensure this references the environment variable
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
}

model Quote {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  quote       String   
  author      String   
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
